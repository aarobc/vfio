    <name>gamingvm</name>
    <uuid>01bd2ed1-b465-4eba-b6e4-47c6ac8171c6</uuid>
    <memory unit="GB">10</memory>
    <currentMemory unit="GB">10</currentMemory>
    <memoryBacking>
        <locked />
